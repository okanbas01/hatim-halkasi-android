<?xml version="1.0" encoding="utf-8"?>
<!--
  Android 12+: Sistem splash arka planı ortada logo ile (splash_window_background).
  windowSplashScreenAnimatedIcon şeffaf; asıl görüntü windowBackground'da.
-->
<resources>
    <style name="Theme.App.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg_intro</item>
        <item name="android:statusBarColor">@color/primary_green</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon_transparent</item>
        <item name="android:windowSplashScreenBackground">@color/bg_intro</item>
    </style>
</resources>
