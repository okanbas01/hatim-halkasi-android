<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget_rounded"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:padding="12dp">

    <!-- SOL TARAFI (NAMAZ VAKTİ) -->
    <LinearLayout
        android:id="@+id/layoutNext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- DEĞİŞİKLİK 1: İKON BOYUTU BÜYÜTÜLDÜ (18dp -> 28dp) -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_widget_clock"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/widgetNextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İMSAK"
            android:textColor="#C8E6C9"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widgetNextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widgetCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yükleniyor..."
            android:textColor="#FFD54F"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- AYIRICI ÇİZGİ -->
    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:background="#40FFFFFF"
        android:src="@android:color/transparent" />

    <!-- SAĞ TARAFI (HATİM DURUMU) -->
    <!-- DEĞİŞİKLİK 2: ID EKLENDİ (layoutHatim) -->
    <LinearLayout
        android:id="@+id/layoutHatim"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgWidgetIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nav_quran_book"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/widgetHatimInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatim Görevin"
            android:textColor="#C8E6C9"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/widgetHatimStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>