<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/secondary_cream">

    <TextView
        android:text="Arkadaş Ekle"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Arama Alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/etSearchUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Kullanıcı adı girin..." />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ara"/>
    </LinearLayout>

    <!-- Sonuç Listesi (Basitçe Text ile gösterelim şimdilik) -->
    <TextView
        android:id="@+id/txtSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sonuç burada görünecek"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="#FFF"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arkadaş Olarak Ekle"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="Arkadaşların:"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>