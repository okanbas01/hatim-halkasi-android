<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLayoutRead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/secondary_cream">

    <!-- ÜST PANEL -->
    <LinearLayout
            android:id="@+id/topBarRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_green"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingTop="@dimen/_40sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:elevation="@dimen/_4sdp">

        <!-- 1. SATIR -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/btnBackRead"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                    android:id="@+id/txtReadTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cüz Okuma"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_12sdp"/>
        </LinearLayout>

        <!-- 2. SATIR KONTROLLER -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="@dimen/_12sdp">

            <ImageView
                    android:id="@+id/btnOpenPlayer"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/ic_read_audio"
                    app:tint="@color/white"
                    android:background="@drawable/bg_icon_circle_transparent"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_8sdp"/>

            <LinearLayout
                    android:id="@+id/btnToggleLanguage"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_icon_circle_transparent"
                    android:layout_marginEnd="@dimen/_8sdp">

                <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_read_lang"
                        app:tint="@color/accent_gold"/>

                <TextView
                        android:id="@+id/txtLangLabel"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                    android:id="@+id/btnZoomOut"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/ic_read_reduce"
                    android:layout_marginEnd="@dimen/_8sdp"/>

            <ImageView
                    android:id="@+id/btnZoomIn"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/ic_read_enlarge"
                    android:layout_marginEnd="@dimen/_8sdp"/>

            <ImageView
                    android:id="@+id/btnToggleTheme"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/ic_read_moon"
                    app:tint="@color/accent_gold"
                    android:background="@drawable/bg_icon_circle_transparent"/>
        </LinearLayout>
    </LinearLayout>

    <!-- İÇERİK - Mushaf stili (loading RecyclerView ilk item olarak gösterilir) -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAyahs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_quran_page"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:clipToPadding="false"
            android:scrollbars="none"/>

    <ProgressBar
            android:id="@+id/progressBarRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    <!-- PLAYER -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_14sdp"
            app:cardElevation="@dimen/_6sdp"
            app:cardBackgroundColor="@color/white"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

            <!-- ÜST SATIR -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <!-- ⏮ GERİ -->
                <ImageView
                        android:id="@+id/btnPrev"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@android:drawable/ic_media_previous"
                        app:tint="@color/primary_green"
                        android:background="@drawable/bg_icon_circle_transparent"
                        android:padding="@dimen/_8sdp"/>

                <!-- ▶ / ⏸ -->
                <ImageView
                        android:id="@+id/btnPlayPause"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="@color/primary_green"
                        android:background="@drawable/bg_icon_circle_transparent"
                        android:padding="@dimen/_8sdp"/>

                <!-- ⏭ İLERİ -->
                <ImageView
                        android:id="@+id/btnNext"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="@color/primary_green"
                        android:background="@drawable/bg_icon_circle_transparent"
                        android:padding="@dimen/_8sdp"/>

                <!-- ORTA BİLGİ -->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                    <TextView
                            android:id="@+id/txtReciterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mishary Rashid Alafasy"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/txtPlayerStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hazır"
                            android:textSize="10sp"
                            android:textColor="@color/text_grey"/>
                </LinearLayout>

                <TextView
                        android:id="@+id/txtSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0x"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:layout_marginEnd="6dp"/>

                <ImageView
                        android:id="@+id/btnClosePlayer"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"/>
            </LinearLayout>

            <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/txtCurrentTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textSize="10sp"/>

                <TextView
                        android:id="@+id/txtTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>