<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_cream">

    <!-- Toolbar: Geri + Başlık Görüş ve Destek -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@drawable/bg_header_curved"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/btnSupportBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:minHeight="48dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geri"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/opinion_support"
                app:tint="#E8F5E9"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Görüş ve Destek"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/supportContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Kart 1: Geri Bildirim Gönder -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSupportFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background_light"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/call_centre"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Geri Bildirim Gönder"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/text_dark"
                            android:alpha="0.9"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Öneri, görüş veya yaşadığınız bir sorunu bize iletin."
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:alpha="0.9"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Kart 2: Bizi Destekleyenler (tıklanınca genişleyen) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSupportBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background_light"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Kart başlık alanı (her zaman görünür) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/support_umbrella"
                            android:contentDescription="@null"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bizi Destekleyenler"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/text_dark"
                                android:alpha="0.9"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uygulamamızın gelişimine katkı sağlayan markayı inceleyebilirsiniz."
                                android:textSize="13sp"
                                android:textColor="@color/text_grey"
                                android:alpha="0.9"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/iconSupportExpand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/text_grey"/>
                    </LinearLayout>

                    <!-- Genişleyen detay (başta gizli) -->
                    <LinearLayout
                        android:id="@+id/supportBrandDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="20dp"
                        android:gravity="center_horizontal">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/text_grey"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Roof Atelier"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/text_dark"
                            android:alpha="0.9"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Kadın çanta ve ayakkabı koleksiyonlarıyla öne çıkan, uygulamamıza destek sağlayan markamız."
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:textAlignment="center"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="12dp"
                            android:background="@color/support_brand_bg">
                            <ImageView
                                android:id="@+id/imgSupportBrandLogo"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:scaleType="fitCenter"
                                android:contentDescription="@null"
                                android:src="@drawable/roof_atelier"/>
                        </FrameLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSupportVisitWeb"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Web Sitesini Ziyaret Et"
                            android:textSize="14sp"
                            app:backgroundTint="@color/primary_green"
                            android:textColor="@color/white"
                            app:cornerRadius="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
