<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        android:gravity="center_horizontal">

        <!-- 1. İKON (Hafif Kırmızı Daire İçinde Çöp Kutusu/Yenileme) -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_circle_light_red"
            android:layout_marginBottom="16dp">
            <!-- bg_circle_light_red yoksa aşağıda kodunu vereceğim -->

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="center"
                app:tint="#D32F2F"/>
        </FrameLayout>

        <!-- 2. BAŞLIK -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zikri Sıfırla"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"/>

        <!-- 3. AÇIKLAMA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çekilen zikir sayısı sıfırlanacak. Bu işlem geri alınamaz. Emin misiniz?"
            android:textSize="14sp"
            android:textColor="#757575"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"/>

        <!-- 4. BUTON (SIFIRLA - Kırmızımsı veya Yeşil) -->
        <!-- Kullanıcıyı uyarmak için kırmızı tonlu bir buton da olabilir ama
             tema bütünlüğü için Yeşil Buton kullanıp metni net yazalım. -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmReset"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="EVET, SIFIRLA"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_rounded_primary"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"/>

        <!-- 5. VAZGEÇ -->
        <TextView
            android:id="@+id/btnCancelReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAZGEÇ"
            android:textAllCaps="true"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:letterSpacing="0.05"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>