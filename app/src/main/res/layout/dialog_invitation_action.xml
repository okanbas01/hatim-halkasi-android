<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:gravity="center">

        <!-- İkon -->
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@android:drawable/ic_dialog_email"
            app:tint="#EF6C00"
            android:background="@drawable/bg_icon_circle_transparent"
            android:backgroundTint="#FFF3E0"
            android:padding="@dimen/_12sdp"/>

        <!-- Başlık -->
        <TextView
            android:id="@+id/txtDialogHatimName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatim Adı"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:fontFamily="serif"
            android:layout_marginTop="@dimen/_12sdp"/>

        <!-- Mesaj -->
        <TextView
            android:id="@+id/txtDialogSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmet seni bu hatime davet ediyor."
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_grey"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_6sdp"/>

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp">

            <!-- Reddet -->
            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="Reddet"
                android:textColor="#D32F2F"
                android:backgroundTint="#FFEBEE"
                app:cornerRadius="@dimen/_10sdp"
                android:stateListAnimator="@null"
                app:elevation="0dp"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <!-- Kabul Et -->
            <Button
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="Katıl"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_green"
                app:cornerRadius="@dimen/_10sdp"
                android:stateListAnimator="@null"
                app:elevation="0dp"
                android:layout_marginStart="@dimen/_6sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btnCancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kapat"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>