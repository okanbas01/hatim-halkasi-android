<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_cream">

    <!-- KATMAN 1: İÇERİK -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- BAŞLIK VE GERİ BUTONU -->
        <LinearLayout
            android:id="@+id/headerDua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_curved"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <LinearLayout
                android:id="@+id/btnBackDua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_minus6sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geri"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_4sdp"/>
            </LinearLayout>

            <TextView
                android:text="Dua Köşesi"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"/>
            <TextView
                android:text="Müminin mümin kardeşine duası kabul olur."
                android:textColor="#E8F5E9"
                android:textSize="@dimen/_11ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- LİSTE -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_140sdp"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/_6sdp"/>
        <!-- paddingBottom _140sdp: Menü ve FAB buton altında kalmaması için -->

    </LinearLayout>

    <!-- 3. DUA EKLE BUTONU -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddDua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_20sdp"

        android:text="Dua İste"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"

        android:backgroundTint="@color/accent_gold"

        app:icon="@drawable/ic_dua_button"
        app:iconTint="@null"
        app:iconSize="@dimen/_18sdp"
        app:iconPadding="@dimen/_6sdp"

        android:elevation="@dimen/_8sdp"
        app:elevation="@dimen/_8sdp"/>

</FrameLayout>