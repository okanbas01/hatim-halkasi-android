<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream">

    <!-- 1) İstatistik Kartı -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_selcuk"
                android:background="@drawable/bg_icon_circle_transparent"
                app:tint="@color/accent_gold"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hatim İstatistikleri"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <!-- ✅ KULLANILAN ID -->
                <TextView
                    android:id="@+id/txtHatimCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 0 Tamamlandı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 2) Başlık -->
    <TextView
        android:id="@+id/txtTitleList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hatim Halkalarım"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardStats"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 3) Liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHatims"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/txtTitleList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4) BOŞ DURUM -->
    <TextView
        android:id="@+id/txtEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Henüz bir halkaya katılmadınız.\nHaydi, bir 'Hatim Başlat'!"
        android:gravity="center"
        android:textColor="#757575"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txtTitleList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
