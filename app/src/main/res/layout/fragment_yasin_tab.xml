<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_cream"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp">

        <!-- BEYAZ KART (ARTIK TIKLANABİLİR) -->
        <!-- EKLENENLER: clickable, focusable ve foreground -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardYasin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_4sdp"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/_20sdp">

                <!-- 1. KİTAP İKONU -->
                <ImageView
                    android:src="@drawable/ic_nav_quran_book"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:tint="@null" />

                <!-- 2. BAŞLIK -->
                <TextView
                    android:text="Yasin-i Şerif"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- 3. ALT METİN -->
                <TextView
                    android:text="Kur'an'ın kalbi olan Yasin Suresini okumak için dokunun."
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/text_grey"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- 4. YEŞİL BUTON (GÖRSEL OLARAK DURUYOR) -->
                <!-- DEĞİŞİKLİK: clickable="false" yaptık ki tıklamayı Karta paslasın -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReadYasin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:text="Yasin Suresini Oku"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="false"
                    android:focusable="false"
                    app:cornerRadius="@dimen/_10sdp"
                    app:backgroundTint="#1B5E20"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>