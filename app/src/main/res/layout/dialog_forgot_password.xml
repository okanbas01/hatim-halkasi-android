<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Üst İkon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_settings"
            app:tint="@color/primary_green"
            android:background="@drawable/bg_icon_circle_transparent"
            android:backgroundTint="#E8F5E9"
            android:padding="14dp"
            android:layout_marginBottom="16dp"/>
        <!-- Not: Kilit ikonun varsa onu kullan, yoksa çark/settings ikonu da uyar -->

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifre Sıfırlama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:fontFamily="serif"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabınıza ait e-posta adresini giriniz. Size bir sıfırlama bağlantısı göndereceğiz."
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"/>

        <!-- E-posta Kutusu -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="E-posta Adresiniz"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary_green"
            app:hintTextColor="@color/primary_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etResetEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Butonlar -->
        <Button
            android:id="@+id/btnResetSend"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Gönder"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            app:cornerRadius="12dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/btnResetCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vazgeç"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>