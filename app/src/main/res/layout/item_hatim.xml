<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHatimItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginVertical="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <!-- SOL TARAFTAKİ İKON -->
        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_resume_reading"
            android:background="@drawable/bg_icon_circle_transparent"
            android:backgroundTint="#F1F8E9"
            android:padding="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- ORTA KISIM: BAŞLIK VE AÇIKLAMA -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/imgIcon"
            app:layout_constraintEnd_toStartOf="@+id/progressLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramazan Hatmi"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txtItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açıklama..."
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_2sdp"/>

            <!-- Küçük Durum Yazısı -->
            <TextView
                android:id="@+id/txtItemStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devam Ediyor"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/accent_gold"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_4sdp"/>
        </LinearLayout>

        <!-- SAĞ TARAF: YUVARLAK İLERLEME ÇUBUĞU -->
        <FrameLayout
            android:id="@+id/progressLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorSize="@dimen/_36sdp"
                app:trackThickness="@dimen/_3sdp"
                app:trackColor="#E0E0E0"
                app:indicatorColor="@color/primary_green"
                android:progress="60"/>

            <TextView
                android:id="@+id/txtProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%60"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:layout_gravity="center"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>