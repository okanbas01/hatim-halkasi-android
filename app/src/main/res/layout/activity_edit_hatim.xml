<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- BAŞLIK VE GERİ BUTONU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/btnBackEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/primary_green"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hatmi Düzenle"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:layout_marginStart="16dp"
                android:fontFamily="serif"/>
        </LinearLayout>

        <!-- Hatim Adı -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEditHatimName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hatim Başlığı"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary_green"
            app:hintTextColor="@color/primary_green"
            app:counterEnabled="true"
            app:counterMaxLength="100"> <!-- KARAKTER SAYACI (100) -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditHatimName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLength="100"/> <!-- FİZİKSEL SINIR -->
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Açıklama -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEditHatimDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kimin İçin / Niyet"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary_green"
            app:hintTextColor="@color/primary_green"
            app:counterEnabled="true"
            app:counterMaxLength="500"> <!-- KARAKTER SAYACI (500) -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditHatimDesc"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLength="500"/> <!-- FİZİKSEL SINIR -->
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Butonlar -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Değişiklikleri Kaydet"
            android:backgroundTint="@color/primary_green"
            app:cornerRadius="12dp"
            android:layout_marginTop="32dp"/>

        <Button
            android:id="@+id/btnCancelEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vazgeç"
            android:textColor="@color/text_grey"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>