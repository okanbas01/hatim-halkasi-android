<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_2sdp"
    app:strokeColor="#F5F5F5"
    app:strokeWidth="1dp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_12sdp">

        <!-- SURE NUMARASI (Yeşil Yuvarlak) -->
        <FrameLayout
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/bg_circle_green">

            <TextView
                android:id="@+id/txtSurahNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"/>
        </FrameLayout>

        <!-- İSİM VE DETAY -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_14sdp">

            <!-- SURE İSMİ: Siyah ve Kalın (Okunaklı) -->
            <TextView
                android:id="@+id/txtSurahName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fatiha"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"/>
            <!-- text_dark yoksa #212121 kullan -->

            <!-- DETAY: Gri ve Standart -->
            <TextView
                android:id="@+id/txtSurahDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mekki • 7 Ayet"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_2sdp"/>
            <!-- text_grey yoksa #757575 kullan -->
        </LinearLayout>

        <!-- SAĞDAKİ PLAY İKONU -->
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_media_play"
            app:tint="@color/accent_gold"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>