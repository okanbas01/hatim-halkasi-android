<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_cream">

    <!-- 1. BAŞLIK VE GERİ BUTONU -->
    <LinearLayout
        android:id="@+id/headerPrayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_curved"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:paddingBottom="@dimen/_50sdp">

        <LinearLayout
            android:id="@+id/btnBackPrayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_minus6sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geri"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:layout_marginStart="@dimen/_4sdp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Namaz Hocası"
            android:textColor="@color/white"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_16sdp"/>
    </LinearLayout>

    <!-- 2. SEKMELER -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabPrayerTimes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_minus30sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:background="@drawable/bg_card_border"

        app:tabBackground="@drawable/selector_tab_prayer"
        app:tabIndicatorHeight="0dp"

        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/text_grey"

        app:tabMode="scrollable"
        app:tabRippleColor="#E8F5E9"/>

    <!-- LİSTE (DÜZELTİLEN KISIM) -->
    <!-- paddingBottom değerini _100sdp yaptık ki alt menüden kurtulsun -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPrayerSteps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

</LinearLayout>