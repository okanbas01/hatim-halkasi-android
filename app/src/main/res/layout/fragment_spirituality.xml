<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_90sdp">

        <!-- ÜST YEŞİL ALAN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:background="@drawable/bg_header_curved"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maneviyat"
                android:textColor="@color/white"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruhunu besleyen araçlar."
                android:textColor="#E8F5E9"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_4sdp"/>
        </LinearLayout>

        <!-- ARAÇLAR GRID YAPISI -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:padding="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_minus30sdp">

            <!-- 1. ZİKİRMATİK -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardZikirmatik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_nav_beads" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#E8F5E9" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zikirmatik" android:textStyle="bold" android:textSize="@dimen/_12ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2. ESMA-ÜL HÜSNA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEsma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_tool_esma" app:tint="#C5A059" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#FFF8E1" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Esma-ül Hüsna" android:textStyle="bold" android:textSize="@dimen/_11ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. DUA KÖŞESİ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_tool_prayer" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#E8F5E9" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dua Köşesi" android:textStyle="bold" android:textSize="@dimen/_12ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4. KAZA TAKİP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardKaza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_tool_kaza" app:tint="#EF6C00" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#FFF3E0" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kaza Takip" android:textStyle="bold" android:textSize="@dimen/_12ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 5. KIBLE PUSULASI -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQibla"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_tool_qibla_compass" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#FFF8E1" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kıble Bul" android:textStyle="bold" android:textSize="@dimen/_12ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 6. NAMAZ HOCASI -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNamazHocasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_tool_salah" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#E8F5E9" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Namaz Hocası" android:textStyle="bold" android:textSize="@dimen/_12ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 7. KUR'AN RADYOSU -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="@dimen/_16sdp" android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:src="@drawable/ic_tool_radio" android:background="@drawable/bg_icon_circle_transparent" android:backgroundTint="#E8F5E9" android:padding="@dimen/_10sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kur'an Radyosu" android:textStyle="bold" android:textSize="@dimen/_11ssp" android:textColor="@color/text_dark" android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 8. CUMA MESAJI (GÜNCELLENDİ: YENİ LOGO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFridayMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_cuma_kart"
                        android:background="@drawable/bg_icon_circle_transparent"
                        android:backgroundTint="#E8F5E9"
                        android:padding="@dimen/_10sdp"/>
                    <!-- Not: SVG dosyanın kendi renkleri varsa app:tint satırını silebilirsin. -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durum Paylaş"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/text_dark"
                        android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 9. BİLGİ YARIŞMASI -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBilgiYarismasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_16sdp"
                        android:gravity="center">
                    <ImageView android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/quiz"
                            android:background="@drawable/bg_icon_circle_transparent"
                            android:backgroundTint="#E8F5E9"
                            android:padding="@dimen/_10sdp" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bilgi Yarışması"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/text_dark"
                            android:layout_marginTop="@dimen/_12sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Görüş ve Destek (tam genişlik kart) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_16sdp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/opinion_support"
                    android:background="@drawable/bg_icon_circle_transparent"
                    android:backgroundTint="#E8F5E9"
                    android:padding="@dimen/_10sdp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_12sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Görüş ve Destek"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/text_dark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uygulama hakkındaki düşüncelerinizi paylaşabilir veya destek bilgilerine ulaşabilirsiniz."
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/text_grey"
                        android:layout_marginTop="@dimen/_2sdp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>