<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        android:gravity="center_horizontal">

        <!-- 1. İKON (Açık renk daire içinde INFO ikonu) -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_circle_light"
            android:layout_marginBottom="16dp">

            <!-- İSTEDİĞİN INFO İKONU BURADA -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_dialog_info"
                android:layout_gravity="center"
                app:tint="@color/primary_green"/>
        </FrameLayout>

        <!-- 2. BAŞLIK (Serif ve Koyu Yeşil - Referans Görseldeki Gibi) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İzin Gerekli"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"/>

        <!-- 3. AÇIKLAMA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bildirimleri alabilmek için cihaz ayarlarından 'Bildirimler' iznini manuel olarak açmanız gerekiyor."
            android:textSize="14sp"
            android:textColor="#757575"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"/>

        <!-- 4. BUTON (Geniş Yeşil Buton - Üstte) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDialogSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ayarlara Git"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_rounded_primary"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"/>
        <!-- Not: bg_button_rounded_primary yoksa: android:backgroundTint="@color/primary_green" -->

        <!-- 5. VAZGEÇ (Sadece Yazı, Büyük Harf - Altta) -->
        <TextView
            android:id="@+id/btnDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ŞİMDİLİK VAZGEÇ"
            android:textAllCaps="true"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:letterSpacing="0.05"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>