<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_50sdp"
        android:clipToPadding="false">

        <!-- Header: Geri Butonu -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/primary_green"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="@dimen/_minus8sdp"
            android:contentDescription="Geri Dön"
            android:clickable="true"
            android:focusable="true" />

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgLogoLogin"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/app_logo_final"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_12sdp" />

        <!-- Başlık -->
        <TextView
            android:id="@+id/txtWelcomeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekrar Hoş Geldiniz"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_24sdp"/>

        <!-- === FORM ALANLARI === -->

        <!-- 1. E-posta Alanı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-posta Adresiniz"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_6sdp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="@dimen/_12sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_input_white"
                android:hint="ornek@email.com"
                android:textColorHint="#9CA3AF"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2. Şifre Alanı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifre"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_6sdp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:boxBackgroundMode="none"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="@dimen/_6sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_input_white"
                android:hint="********"
                android:textColorHint="#9CA3AF"
                android:inputType="textPassword"
                android:textSize="@dimen/_12ssp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ŞİFREMİ UNUTTUM -->
        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifremi Unuttum"
            android:textColor="@color/text_grey"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_gravity="end"
            android:padding="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/_18sdp"/>

        <!-- Giriş Yap Butonu -->
        <Button
            android:id="@+id/btnLoginAction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="Giriş Yap"
            android:textAllCaps="false"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_primary"
            app:backgroundTint="@null"
            android:layout_marginBottom="@dimen/_18sdp"/>

        <!-- Kayıt Ol Linki -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hesabın yok mu?"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/txtGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Kayıt Ol"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/primary_green"
                android:padding="@dimen/_6sdp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>