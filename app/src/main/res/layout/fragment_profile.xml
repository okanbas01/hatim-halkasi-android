            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginTop="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/txtProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
