<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream"
    android:fillViewport="true"
    tools:context=".FriendsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_90sdp">

        <!-- 1. ÜST YEŞİL ALAN -->
        <LinearLayout
            android:id="@+id/headerFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_curved"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingTop="@dimen/_36sdp"
            android:paddingBottom="@dimen/_30sdp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meclis"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dostlarını bul, hatim halkasına davet et."
                android:textColor="#E8F5E9"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_4sdp"/>
        </LinearLayout>

        <!-- 2. ARAMA KARTI -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_minus24sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/headerFriends">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yeni Dost Ekle"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="@dimen/_6sdp"/>

                <!-- Arama Kutusu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_border"
                    android:padding="@dimen/_4sdp">

                    <EditText
                        android:id="@+id/etSearchUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Kullanıcı adı girin..."
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_11ssp"
                        android:inputType="text"
                        android:maxLines="1"/>

                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ara"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/accent_gold"
                        style="@style/Widget.MaterialComponents.Button"
                        android:minWidth="0dp"
                        android:paddingHorizontal="@dimen/_16sdp"/>
                </LinearLayout>

                <!-- ARAMA SONUCU ALANI -->
                <LinearLayout
                    android:id="@+id/layoutSearchResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#F9F9F9"
                    android:padding="@dimen/_6sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:src="@drawable/ic_nav_user_islamic"
                        app:tint="@color/primary_green"
                        android:background="@drawable/bg_icon_circle_transparent"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/txtSearchUsername"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kullanıcı"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"/>

                    <Button
                        android:id="@+id/btnAddFriend"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_32sdp"
                        android:text="Ekle"
                        android:textSize="@dimen/_10ssp"
                        android:backgroundTint="@color/primary_green"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. BEKLEYEN İSTEKLER -->
        <TextView
            android:id="@+id/titleRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bekleyen İstekler"
            android:textColor="@color/primary_green"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSearch"/>

        <TextView
            android:id="@+id/txtNoRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Henüz bekleyen istek yok."
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleRequests"/>

        <ListView
            android:id="@+id/listRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@+id/titleRequests"/>

        <!-- 4. DOSTLARIM -->
        <TextView
            android:id="@+id/titleFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dostların"
            android:textColor="@color/primary_green"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listRequests"/>

        <ListView
            android:id="@+id/listFriends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp"
            app:layout_constraintTop_toBottomOf="@+id/titleFriends"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>