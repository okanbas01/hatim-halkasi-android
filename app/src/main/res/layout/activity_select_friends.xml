<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_cream"
    tools:context=".SelectFriendsActivity">

    <!-- 1. ÜST YEŞİL BAŞLIK ALANI -->
    <LinearLayout
        android:id="@+id/headerSelect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@drawable/bg_header_curved"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arkadaş Seç"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:fontFamily="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatim halkasına eklemek istediklerini işaretle."
            android:textColor="#E8F5E9"
            android:textSize="@dimen/_11ssp"
            android:layout_marginTop="@dimen/_4sdp"/>
    </LinearLayout>

    <!-- 2. İŞLEM KARTI -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_minus30sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/headerSelect">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/primary_green"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/bg_icon_circle_transparent"
                android:backgroundTint="#E8F5E9"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Arkadaş Listesi"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/_11ssp"
                android:layout_marginStart="@dimen/_10sdp"/>

            <Button
                android:id="@+id/btnSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümünü Seç"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/accent_gold"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:rippleColor="#FFF8E1"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 3. LİSTE ALANI -->
    <ListView
        android:id="@+id/listSelectFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:choiceMode="multipleChoice"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmSelection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardAction" />

    <!-- 4. BOŞ DURUM UYARISI (GÜNCELLENDİ) -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cardAction"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmSelection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Yeni oluşturduğumuz şık tik ikonu -->
        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_check_circle_large"
            app:tint="@color/primary_green"
            android:alpha="0.2"/> <!-- Silik görünüm için alpha 0.2 -->

        <!-- Tek ve temiz mesaj -->
        <TextView
            android:id="@+id/txtEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tüm arkadaşların zaten ekli"
            android:textColor="@color/text_grey"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_12sdp"/>

    </LinearLayout>

    <!-- 5. ONAY BUTONU -->
    <Button
        android:id="@+id/btnConfirmSelection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:text="Seçimi Tamamla"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_green"
        app:cornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>