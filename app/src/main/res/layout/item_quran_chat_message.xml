<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

    <!-- ✅ AI Bubble (SOLDa, dar) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bubbleAi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.80"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_2sdp"
        app:strokeWidth="1dp"
        app:strokeColor="#E8E0D0"
        app:cardBackgroundColor="#FFF8ED">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp">

            <!-- Header -->
            <TextView
                android:id="@+id/txtAiHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="✨ Gönül Rehberi"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_12ssp"
                android:letterSpacing="0.02"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Ayet Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAyet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_14sdp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E1D7C5"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/txtAiHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAyetTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="İlgili ayet"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtAyetRef"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="(Sure, Ayet)"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintTop_toBottomOf="@+id/txtAyetTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtAyetMeal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="Meal burada…"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_12ssp"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        app:layout_constraintTop_toBottomOf="@+id/txtAyetRef"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI Body -->
            <TextView
                android:id="@+id/txtAiBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Açıklama burada…"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/_12ssp"
                android:lineSpacingExtra="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@+id/cardAyet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ✅ Typing dots -->
            <LinearLayout
                android:id="@+id/layoutTyping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/txtAiBody"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:id="@+id/dot1"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/bg_typing_dot"/>

                <View
                    android:id="@+id/dot2"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:background="@drawable/bg_typing_dot"/>

                <View
                    android:id="@+id/dot3"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:background="@drawable/bg_typing_dot"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ✅ USER Bubble (SAĞda, dar) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bubbleUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_percent="0.72"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardBackgroundColor="@color/primary_green">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtUserLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sen"
                android:textColor="#DFF3E6"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Sen"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:lineSpacingExtra="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtUserLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
