<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="Dua İsteği"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDuaInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duanızı buraya yazın..."
            android:minHeight="120dp"
            android:gravity="top|start"
            android:background="@drawable/bg_card_border"
            android:padding="12dp"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelDua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İptal"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/text_grey"/>

            <Button
                android:id="@+id/btnPostDua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paylaş"
                android:backgroundTint="@color/accent_gold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>