<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:gravity="center">

        <!-- Üst İkon -->
        <FrameLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/bg_icon_circle_transparent"
            android:backgroundTint="#E8F5E9">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_nav_user_islamic"
                app:tint="@color/primary_green"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Başlık (Kullanıcı Adı) -->
        <TextView
            android:id="@+id/txtSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:fontFamily="serif"
            android:layout_marginTop="@dimen/_12sdp"/>

        <!-- Açıklama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seni meclisine eklemek ve hatimlere davet etmek istiyor."
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_grey"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:lineSpacingExtra="@dimen/_2sdp"/>

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp">

            <!-- Reddet Butonu -->
            <Button
                android:id="@+id/btnRejectRequest"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="Reddet"
                android:textSize="@dimen/_11ssp"
                android:textColor="#D32F2F"
                android:backgroundTint="#FFEBEE"
                app:cornerRadius="@dimen/_10sdp"
                android:stateListAnimator="@null"
                app:elevation="0dp"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <!-- Kabul Et Butonu -->
            <Button
                android:id="@+id/btnAcceptRequest"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="Kabul Et"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_green"
                app:cornerRadius="@dimen/_10sdp"
                android:stateListAnimator="@null"
                app:elevation="0dp"
                android:layout_marginStart="@dimen/_6sdp"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>