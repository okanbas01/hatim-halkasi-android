<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:gravity="center">

        <!-- İkon -->
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_nav_community"
            app:tint="@color/primary_green"
            android:background="@drawable/bg_icon_circle_transparent"
            android:backgroundTint="#E8F5E9"
            android:padding="@dimen/_12sdp"/>

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Henüz Dostun Yok"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:fontFamily="serif"
            android:layout_marginTop="@dimen/_12sdp"/>

        <!-- Mesaj -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatim halkasına davet etmek için önce Meclis sayfasına gidip arkadaşlarını eklemelisin."
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_grey"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:lineSpacingExtra="@dimen/_2sdp"/>

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp">

            <!-- Meclis'e Git Butonu -->
            <Button
                android:id="@+id/btnGoToFriends"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="Meclis'e Git"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_green"
                app:cornerRadius="@dimen/_10sdp"/>

            <!-- Vazgeç Butonu -->
            <TextView
                android:id="@+id/btnCancelDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vazgeç"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>