<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Krem Zemin -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F9F9F3"/>
        </shape>
    </item>
    <!-- Altın Işık -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#40C5A059"
                android:endColor="#00FFFFFF"
                android:type="radial"/>
        </shape>
    </item>
    <!-- Kesik Çizgili Çerçeve -->
    <item android:top="15dp" android:bottom="15dp" android:left="15dp" android:right="15dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#1B5E20" android:dashWidth="10dp" android:dashGap="5dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
</layer-list>